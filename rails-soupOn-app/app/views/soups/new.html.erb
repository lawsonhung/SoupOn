<h1>Create a soup here</h1>
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<br>

<%= form_for @soup do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
    <br>

    <%= f.label :img_url %>
    <%= f.text_field :img_url %>
    <br>

    <%= f.submit %>

<% end %>
