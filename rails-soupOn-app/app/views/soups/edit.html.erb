<h1>Edit soup here</h1>
<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>



<%= button_to "Return to the list of available Soups", soups_path, method: :get %>

<br>




<%= form_for @soup do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
    <br>

    <%= f.label :img_url %>
    <%= f.text_field :img_url %>
    <br>

    <%= f.submit %>

<% end %>
